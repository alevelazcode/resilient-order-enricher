<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress DesignForExtension for Spring Boot configuration classes -->
    <suppress checks="DesignForExtension" files=".*Config\.java"/>

    <!-- Suppress FinalParameters for test files -->
    <suppress checks="FinalParameters" files=".*Test\.java"/>
    <suppress checks="FinalParameters" files=".*Tests\.java"/>

    <!-- Suppress MagicNumber for test files -->
    <suppress checks="MagicNumber" files=".*Test\.java"/>
    <suppress checks="MagicNumber" files=".*Tests\.java"/>

    <!-- Suppress MethodName style for test methods using descriptive names -->
    <suppress checks="MethodName" files=".*Test\.java"/>
    <suppress checks="MethodName" files=".*IntegrationTest\.java"/>

    <!-- Suppress ParameterNumber for complex test helpers -->
    <suppress checks="ParameterNumber" files=".*Test\.java"/>
    <suppress checks="ParameterNumber" files=".*Tests\.java"/>

    <!-- Suppress LineLength in tests where long JSON examples and URLs are expected -->
    <suppress checks="LineLength" files=".*Test\.java"/>
    <suppress checks="LineLength" files=".*IntegrationTest\.java"/>

    <!-- Suppress HiddenField for DTOs and entities -->
    <suppress checks="HiddenField" files=".*dto.*\.java"/>
    <suppress checks="HiddenField" files=".*entity.*\.java"/>

    <!-- Suppress VisibilityModifier for Spring Boot entities and DTOs -->
    <suppress checks="VisibilityModifier" files=".*entity.*\.java"/>
    <suppress checks="VisibilityModifier" files=".*dto.*\.java"/>

    <!-- Suppress TodoComment for development -->
    <suppress checks="TodoComment" files=".*"/>

    <!-- App-specific suppressions to reduce noise for common Spring patterns -->
    <suppress checks="DesignForExtension" files=".*Controller\.java"/>
    <suppress checks="DesignForExtension" files=".*ExceptionHandler\.java"/>
    <suppress checks="DesignForExtension" files=".*FailedMessageService\.java"/>
    <suppress checks="DesignForExtension" files=".*MockDistributedLockService\.java"/>
    <suppress checks="DesignForExtension" files=".*RedisDistributedLockService\.java"/>

    <!-- Config classes may use numeric literals for timeouts/sizes -->
    <suppress checks="MagicNumber" files=".*Config\.java"/>

    <!-- Main Spring Boot application entrypoint pattern -->
    <suppress checks="HideUtilityClassConstructor" files=".*/OrderWorkerApplication\.java"/>

    <!-- Relax final parameter enforcement globally (team preference) -->
    <suppress checks="FinalParameters" files=".*"/>
</suppressions>
